<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:textColorHint="@color/colorSchetTheme"
            app:hintTextColor="@color/colorDoxodItem0"
            android:id="@+id/edit_name"
            android:layout_marginStart="16dp" android:elevation="50dp"
    >

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название валюты"
                android:textColorHint="@color/colorSchetTheme"
                android:textColor="@color/colorMyBeg"
                tools:text="Доллар"
                style="@style/Profile.EditText.Single"
                android:elevation="50dp"
                android:enabled="true"
                android:ems="10"
                android:cursorVisible="true"
                android:id="@+id/edit_name_text" android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_cod"
            android:layout_marginEnd="16dp"
            android:textColorHint="@color/colorSchetTheme"
            app:hintTextColor="@color/colorDoxodItem0"
            android:id="@+id/edit_kurs"
            android:layout_marginStart="16dp"
            android:elevation="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Курс валюты"
                android:textColorHint="@color/colorSchetTheme"
                android:inputType="numberDecimal"
                android:textColor="@color/colorMyBeg"
                tools:text="65,5"
                style="@style/Profile.EditText.Single"
                android:elevation="50dp"
                android:enabled="true"
                android:ems="10"
                android:cursorVisible="true"
                android:id="@+id/edit_kurs_text" android:numeric="decimal"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            android:textColorHint="@color/colorSchetTheme"
            app:hintTextColor="@color/colorDoxodItem0"
            android:id="@+id/edit_cod"
            android:layout_marginStart="16dp"
            android:elevation="50dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_name" android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Код валюты"
                android:textColorHint="@color/colorSchetTheme"
                android:inputType="text"
                android:textColor="@color/colorMyBeg"
                tools:text="USD"
                style="@style/Profile.EditText.Single"
                android:elevation="50dp"
                android:enabled="true"
                android:ems="10"
                android:cursorVisible="true"
                android:id="@+id/edit_cod_text"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>