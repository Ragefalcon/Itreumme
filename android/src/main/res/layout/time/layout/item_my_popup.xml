<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:paddingStart="4dp"
                                                   android:paddingEnd="20dp" android:paddingBottom="4dp"
                                                   android:paddingTop="4dp">
    <ImageView
            android:id="@+id/iv_my_popup_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_add_butt"
            android:tint="@drawable/sel_col_tint_butt_inv"
            android:tintMode="multiply"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tv_name_popup_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@drawable/sel_col_tint_butt_inv"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="#B9000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            tools:text="Продукты"
            android:fontFamily="sans-serif-medium" android:clickable="false"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/iv_my_popup_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>