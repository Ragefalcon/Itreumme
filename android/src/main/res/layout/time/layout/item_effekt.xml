<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:paddingStart="16dp"
                                                   android:paddingEnd="16dp" android:paddingTop="4dp"
                                                   android:paddingBottom="4dp">

    <TextView
            android:id="@+id/name_effekt"
            android:text="Программа"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorMyBeg"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:shadowColor="@android:color/background_dark"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Н: 8.0/15.0   М: 61.1/67.5   Г: 358.0/515.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hours_info"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="sans-serif"
            android:textColor="@drawable/sel_col_tint_butt_inv"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:shadowColor="@android:color/background_dark"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/name_effekt"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <ru.ragefalcon.tutatores.ui.drawclasses.EffektShkalDrawHelper
            android:id="@+id/effektShkal_item"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_hours_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>