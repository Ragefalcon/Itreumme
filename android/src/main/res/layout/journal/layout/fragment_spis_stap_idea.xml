<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <!--    android:background="@drawable/bg_stap_plan"-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bloknot_item_frideastap"
            android:transitionName="cl_bloknot_item_frideastap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bc_bloknot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp">
        <TextView
                android:id="@+id/tv_bloknot_name_frideastap"
                android:transitionName="tv_bloknot_name_frideastap"
                android:text="Bloknot name in StapIdeaFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#BC8527"
                android:textStyle="bold"
                android:textSize="18sp"
                android:shadowColor="#C6000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_marginBottom="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_idea_item_frideastap"
                android:transitionName="cl_idea_item_frideastap"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bg_idea_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_bloknot_name_frideastap"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">
            <TextView
                    android:id="@+id/tv_idea_name_frideastap"
                    android:transitionName="tv_idea_name_frideastap"
                    android:elevation="120dp"
                    android:text="Idea name in StapIdeaFragment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#CA7900"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:shadowColor="#B9000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:fontFamily="sans-serif-medium"
                    android:clickable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_idea_stap_list"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/butt_add_stap_idea"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_idea_stap"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_idea_name_frideastap"
                    android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
            <Button
                    android:id="@+id/butt_add_stap_idea"
                    android:backgroundTint="@drawable/sel_color_tint_butt"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/ic_add_butt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/butt_back_to_idea"
                    app:layout_constraintHorizontal_bias="0.5"/>
            <Button
                    android:id="@+id/butt_back_to_idea"
                    android:elevation="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/ic_baseline_expand_more_24"
                    android:backgroundTint="@color/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/butt_add_stap_idea"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toBottomOf="@+id/butt_add_stap_idea"
                    android:layout_marginBottom="3dp" app:layout_constraintTop_toTopOf="@+id/butt_add_stap_idea"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>