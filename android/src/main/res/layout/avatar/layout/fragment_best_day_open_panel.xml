<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:fitsSystemWindows="true"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.time.TimeAddVxodPanelFragment" android:layout_gravity="center">

    <!--    <ImageView-->
    <!--            android:src="@drawable/back_add_layout"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent" android:id="@+id/back_add_vxod_tpanel"/>-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_add_tpanel"
            android:transitionName="cl_select_parent_plan_stap_tpanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_analiz_main"
            android:layout_gravity="center">
        <TextView
                android:id="@+id/tv_add_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:textColor="@color/colorEffektShkal_Year"
                android:textSize="14sp"
                android:textStyle="bold"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view"
                tools:text="+1"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:id="@+id/tv_name_bestdays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:textColor="@color/colorRasxodTheme0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view"
                tools:text="Продукты"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/tv_add_days"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/lay_seldate_dp"
                                                           android:visibility="visible"
                                                           tools:visibility="visible"
                                                           android:layout_width="0dp"
                                                           android:layout_height="wrap_content"
                                                           app:layout_constraintBottom_toTopOf="@+id/butt_cancel_tpanel"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent">
            <ru.ragefalcon.tutatores.ui.element_fragment.MyDateSelect
                      android:id="@+id/et_date_dp"
                      android:visibility="visible"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:fontFamily="sans-serif"
                      android:textColor="@drawable/sel_col_tint_butt_inv"
                      tools:text="30 мар. 2020 (пн)"
                      android:textAllCaps="false"
                      android:textSize="20sp"/>
            <Button android:id="@+id/butt_date_dp_right"
                    android:visibility="visible"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/et_date_dp"
                    android:background="@drawable/ic_chevron_right_black_24dp"
                    android:shadowColor="#00FFFFFF"
                    app:layout_constraintTop_toTopOf="@+id/et_date_dp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_date_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:backgroundTint="@drawable/sel_col_tint_butt_inv"
                    app:layout_constraintStart_toEndOf="@+id/et_date_dp"/>
            <Button android:id="@+id/butt_date_dp_left"
                    android:visibility="visible"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/et_date_dp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_date_dp"
                    app:layout_constraintRight_toLeftOf="@+id/et_date_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/ic_chevron_left_black_24dp"
                    android:shadowColor="#00FFFFFF"
                    android:backgroundTint="@drawable/sel_col_tint_butt_inv"
                    app:layout_constraintEnd_toStartOf="@+id/et_date_dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bestday_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:listitem="@layout/item_denplan"
                tools:itemCount="10"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/lay_seldate_dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_name_bestdays"/>
        <Button
                android:id="@+id/butt_cancel_tpanel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_baseline_expand_more_24"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>