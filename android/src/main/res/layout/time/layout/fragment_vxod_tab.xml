<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.time.DenPlanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_vxod_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/cl_butt_vxod_tab"
                app:layout_constraintHorizontal_bias="1.0"
                tools:listitem="@layout/item_vxod"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_butt_vxod_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        >
            <Button
                    android:id="@+id/butt_add_vxod"
                    android:backgroundTint="@drawable/sel_col_tint_butt_inv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/ic_add_butt"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>