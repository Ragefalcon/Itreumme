<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:background="@drawable/background_round_padded"
                                                   android:paddingTop="5dp" android:paddingBottom="5dp"
                                                   android:paddingStart="10dp" android:paddingEnd="10dp">

    <TextView
            android:id="@+id/tv_value_avatar_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="2000" android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorRasxodTheme0"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:shadowColor="@android:color/background_dark" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tv_name_avatar_stat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:textColor="@color/colorMyMainTheme"
            android:textSize="18sp"
            android:textStyle="bold" android:shadowColor="@android:color/background_dark"
            android:layout_alignStart="@+id/view"
            tools:text="Продукты"
            android:fontFamily="sans-serif-medium" app:layout_constraintEnd_toStartOf="@+id/tv_value_avatar_stat"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>