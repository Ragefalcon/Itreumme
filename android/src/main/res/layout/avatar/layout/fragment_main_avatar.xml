<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.settings.SettingsMainScreen"
        android:id="@+id/cl_backgr22"
        android:background="@color/colorRasxodTheme"
>
    <!--    app:theme="@style/AppTheme"-->
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_lay_avatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tabMode="fixed"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorFullWidth="true"
            android:fitsSystemWindows="true"
            app:tabMaxWidth="0dp">
        <!--        app:tabSelectedTextColor="@color/colorDoxodItemText"-->
        <!--        app:tabTextColor="@color/colorPrimaryDark"-->
        <!--        android:background="@color/colorRasxodItem"-->

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Аватар"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цели"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мечты"/>
        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="История"/>
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tab_lay_avatar"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>