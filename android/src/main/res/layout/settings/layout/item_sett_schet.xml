<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_sett_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg_idea_item"
>

    <ImageView
            android:layout_width="4dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/bc_itemdenplan"
            android:id="@+id/iv_sel_ind_dream"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"/>
    <TextView
            android:id="@+id/tv_sum_schet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:textColor="@color/colorDoxodTheme0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#E6000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_alignStart="@+id/view"
            tools:text="245.5"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="@+id/tv_name_schet"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toStartOf="@+id/tv_cod_schet" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_schet" android:layout_marginTop="1dp"
            android:paddingEnd="3dp"/>
    <TextView
            android:id="@+id/tv_cod_schet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:textColor="@color/colorMyMainTheme"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#E6000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_alignStart="@+id/view"
            tools:text="USD"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="@+id/tv_sum_schet"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="viewEnd"
            android:layout_marginEnd="12dp" app:layout_constraintBottom_toBottomOf="@+id/tv_sum_schet"
            android:paddingEnd="3dp"/>
    <TextView
            android:id="@+id/tv_name_schet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:textColor="@color/colorStatTint_04"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#E6000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_alignStart="@+id/view"
            tools:text="Кошелек"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="viewStart" app:layout_constraintEnd_toStartOf="@+id/tv_sum_schet"
            app:layout_constraintStart_toEndOf="@+id/iv_sel_ind_dream" android:layout_marginStart="8dp"
            android:layout_marginTop="3dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
        <!--</androidx.cardview.widget.CardView>-->