<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:foreground="?android:attr/selectableItemBackground"
                                   android:clickable="true"
                                   card_view:cardElevation="4dp"
                                   card_view:cardCornerRadius="6dp"
                                   card_view:cardBackgroundColor="@color/colorSchetItem"
                                   android:layout_marginBottom="2dp" android:layout_marginTop="2dp"
                                   android:layout_marginLeft="4dp" android:layout_marginRight="4dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="?attr/selectableItemBackground" android:layout_height="wrap_content">

        <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:fadingEdge="horizontal|vertical"
                android:layout_marginTop="4dp" android:layout_marginStart="4dp" android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"/>

        <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/text_summa"
                tools:text="Печеньки"
                android:textColor="@android:color/background_dark" android:textSize="14sp"
                android:layout_marginBottom="-2dp" android:fontFamily="sans-serif-medium"/>
        <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@id/text_summa"
                android:textColor="@color/colorSchetItemText"
                android:textSize="14sp"
                android:textStyle="bold" android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view" android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp" tools:text="Продукты" android:layout_marginBottom="-2dp"
                android:fontFamily="sans-serif-medium"/>

        <TextView
                android:id="@+id/text_schet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/text_data"
                tools:text="Кошелек"
                android:textColor="@android:color/holo_green_dark" android:layout_marginBottom="2dp"
                android:textSize="14sp" android:fontFamily="sans-serif-medium"/>

        <TextView
                android:id="@+id/text_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_schet"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="12dp"
                tools:text="20 марта 2020" android:textSize="14sp" android:fontFamily="sans-serif-medium"/>
        <TextView
                android:id="@+id/text_summa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp"
                tools:text="2000" android:layout_alignParentTop="true" android:textStyle="bold"
                android:textSize="24sp" android:textColor="@color/colorSchetItemText" android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" android:shadowColor="@android:color/background_dark"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>