<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="match_parent"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/bg_analiz_main"
            android:id="@+id/add_panel">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_my_message"
                android:fontFamily="serif"
                android:textColor="@color/colorMyBeg"
                android:text="Изменить"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:layout_marginTop="16dp" android:scrollbars="vertical"
                android:maxHeight="500dp"
                android:overScrollMode="ifContentScrolls"
                android:clickable="false" android:fadeScrollbars="false"
        />
        <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/butt_hide_message" android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_back"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@drawable/sel_col_tint_butt_inv"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_message"
                app:layout_constraintStart_toStartOf="@+id/tv_my_message"
                app:layout_constraintEnd_toEndOf="@+id/tv_my_message"
                android:layout_marginTop="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>