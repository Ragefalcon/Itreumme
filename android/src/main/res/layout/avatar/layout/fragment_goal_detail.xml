<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:paddingStart="8dp"
                                                   android:paddingEnd="8dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_goal_detail_frcl"
            android:transitionName="cl_goal_detail_frcl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/bg_idea_item"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0">
        <TextView
                android:id="@+id/tv_opis_goal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:textColor="@color/colorMyMainTheme"
                android:textSize="18sp"
                android:textStyle="bold" android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view"
                tools:text="Описание цели"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_goal_frcl"
                app:layout_constraintEnd_toEndOf="@+id/tv_goal_hour_frcl" android:maxHeight="350dp"
                android:inputType="textMultiLine"/>
        <TextView
                android:id="@+id/tv_name_goal_stat4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:textColor="@color/colorMyMainTheme"
                android:textSize="18sp"
                android:textStyle="bold" android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view"
                android:text="За последнюю неделю:"
                android:fontFamily="sans-serif-medium" app:layout_constraintEnd_toStartOf="@+id/tv_value_goal_stat2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_name_goal_stat3"
        />
        <TextView
                android:id="@+id/tv_value_goal_stat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="2000" android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorRasxodTheme0"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:shadowColor="@android:color/background_dark" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_name_goal_stat3"/>
        <TextView
                android:id="@+id/tv_name_goal_stat3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:textColor="@color/colorMyMainTheme"
                android:textSize="18sp"
                android:textStyle="bold" android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view"
                android:text="За последний месяц:"
                android:fontFamily="sans-serif-medium" app:layout_constraintEnd_toStartOf="@+id/tv_value_goal_stat2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_name_goal_stat2"
        />
        <TextView
                android:id="@+id/tv_value_goal_stat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="2000" android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorRasxodTheme0"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:shadowColor="@android:color/background_dark" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_name_goal_stat2"/>
        <TextView
                android:id="@+id/tv_name_goal_stat1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:textColor="@color/colorMyMainTheme"
                android:textSize="22sp"
                android:textStyle="bold" android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view"
                android:text="Всего:"
                android:fontFamily="sans-serif-medium" app:layout_constraintEnd_toStartOf="@+id/tv_goal_hour_frcl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_goal_hour_frcl"
                app:layout_constraintBottom_toBottomOf="@+id/tv_goal_hour_frcl"/>
        <TextView
                android:id="@+id/tv_name_goal_stat2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:textColor="@color/colorMyMainTheme"
                android:textSize="18sp"
                android:textStyle="bold" android:shadowColor="@android:color/background_dark"
                android:layout_alignStart="@+id/view"
                android:text="За последний год:"
                android:fontFamily="sans-serif-medium" app:layout_constraintEnd_toStartOf="@+id/tv_value_goal_stat2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_goal_hour_frcl"
        />
        <TextView
                android:id="@+id/tv_value_goal_stat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                tools:text="2000" android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorRasxodTheme0"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:shadowColor="@android:color/background_dark" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_goal_hour_frcl"/>
        <TextView
                android:id="@+id/tv_goal_hour_frcl"
                android:transitionName="tv_goal_hour_frcl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDoxodTheme0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:shadowColor="@android:color/background_dark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                tools:text="245.5"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="viewEnd"
                app:layout_constraintBottom_toTopOf="@+id/butt_back" android:layout_marginBottom="8dp"/>
        <TextView
                android:id="@+id/tv_name_goal_frcl"
                android:transitionName="tv_name_goal_frcl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorStatTint_04"
                android:textSize="24sp"
                android:textStyle="bold"
                android:shadowColor="@android:color/background_dark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                tools:text="Продукты"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toStartOf="@+id/tv_goal_hour_frcl"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:id="@+id/butt_back"
                android:elevation="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_baseline_expand_more_24"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintEnd_toStartOf="@+id/butt_priv"
                app:layout_constraintHorizontal_bias="0.5"
        />
        <TextView
                android:id="@+id/tv_privs_goal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorEffektShkal_Nedel"
                android:textSize="24sp"
                android:textStyle="bold"
                android:shadowColor="@android:color/background_dark"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                tools:text="2"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="viewEnd"
                app:layout_constraintBottom_toBottomOf="@+id/butt_priv"
                app:layout_constraintTop_toTopOf="@+id/butt_priv"
                app:layout_constraintStart_toEndOf="@+id/butt_priv"/>
        <!--        <androidx.core.widget.NestedScrollView-->
        <Button
                android:id="@+id/butt_priv"
                android:elevation="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_baseline_cable_24"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintStart_toEndOf="@+id/butt_back"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginBottom="8dp"/>
        <ru.ragefalcon.tutatores.ui.drawclasses.NestedScrollableHost
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_opis_goal"
                app:layout_constraintBottom_toTopOf="@+id/tv_name_goal_stat4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/nested_scroll_host_goal"
                android:layout_marginTop="8dp">

            <HorizontalScrollView
                    android:id="@+id/hsv_statik_diag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_goal_frcl"
                    app:layout_constraintBottom_toTopOf="@+id/butt_back">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:layout_marginBottom="8dp">
                    <ru.ragefalcon.tutatores.ui.drawclasses.RectDiagramDraw
                            android:layout_width="5000dp"
                            android:layout_height="match_parent" android:id="@+id/rect_diag_statik_goal"
                            android:layout_marginTop="22dp"
                    />
                </LinearLayout>
            </HorizontalScrollView>
        </ru.ragefalcon.tutatores.ui.drawclasses.NestedScrollableHost>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>