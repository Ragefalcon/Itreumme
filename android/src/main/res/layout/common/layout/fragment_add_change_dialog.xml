    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_add_tpanel"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
    >

        <ru.ragefalcon.tutatores.ui.drawclasses.BackgroundDial
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/backgroundDial2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Добавить"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/butt_add_change_acpanel"
                app:layout_constraintBottom_toBottomOf="@+id/butt_cancel_acpanel"
                app:layout_constraintLeft_toRightOf="@+id/butt_cancel_acpanel"
                app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        <Button
                android:id="@+id/butt_cancel_acpanel"
                android:text="Отмена"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>
        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/butt_add_change_acpanel" android:layout_marginEnd="16dp"
                android:id="@+id/frag_add_change_container">

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>