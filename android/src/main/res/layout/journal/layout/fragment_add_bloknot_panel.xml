<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:fitsSystemWindows="false"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="550dp"
                                                   tools:context=".ui.time.TimeAddVxodPanelFragment">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColorHint="@color/colorSchetTheme"
            android:id="@+id/edit_name_bloknot"
    >

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название нового блокнота"
                android:textColorHint="@color/colorSchetTheme"
                android:inputType="text"
                android:textColor="#FDEFD6"
                android:textStyle="bold"
                android:textSize="20sp"
                android:shadowColor="#C6000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:fontFamily="sans-serif-medium"
                tools:text="Новый блокнот"
                style="@style/Profile.EditText.Single"
                android:enabled="true"
                android:cursorVisible="true"
                android:id="@+id/edit_name_bloknot_text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_name_bloknot"
            android:textColorHint="@color/colorSchetTheme"
            android:id="@+id/edit_opis_bloknot"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_opis_bloknot_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Описание блокнота"
                android:inputType="textMultiLine|text"
                tools:text="666"
                android:textColor="@color/colorMyBeg"
                style="@style/Profile.EditText.Single"
                android:enabled="true"
                android:ems="10"
                android:cursorVisible="true" android:gravity="fill_horizontal"/>
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>