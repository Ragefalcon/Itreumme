<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_name_spisok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:textColor="@color/colorRasxodTheme0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/background_dark"
            android:layout_alignStart="@+id/view"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:text="Памятные дни:"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bestdays"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_bestdays"
            tools:itemCount="15"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_spisok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>