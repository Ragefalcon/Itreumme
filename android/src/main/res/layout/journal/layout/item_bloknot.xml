<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/cl_bloknot_item"
                                                   android:background="@drawable/ripple_bg_bloknot"
>
    <TextView
            android:text="Заметки"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bloknot_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:textColor="#BC8527"
            android:textStyle="bold"
            android:textSize="18sp"
            android:shadowColor="#C6000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_marginTop="30dp"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:id="@+id/iv_expand_opis"
            android:tintMode="multiply"
            app:srcCompat="@drawable/ic_baseline_expand_more_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:tint="@color/colorRasxodTheme0"/>
    <View
            android:id="@+id/view_svertext"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:fadingEdge="horizontal|vertical"
            android:clickable="false"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/tv_bloknot_name"
            app:layout_constraintEnd_toEndOf="@+id/tv_bloknot_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_bloknot_name"
            android:background="@drawable/ic_simple_rect"
            android:backgroundTint="@color/colorSchetItemText"
            android:alpha="0.5"
    />

    <TextView
            android:id="@+id/text_opis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_bloknot_name"
            app:layout_constraintEnd_toStartOf="@+id/iv_expand_opis"
            app:layout_constraintTop_toBottomOf="@+id/tv_bloknot_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="4dp"
            tools:text="20 марта 2020"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="textStart"
            android:clickable="false"
            android:textColor="#CB7C5D00"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="4dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/bc_itemdenplan"
            android:id="@+id/iv_select_indic"
            android:scaleType="fitXY"
            android:cropToPadding="true"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/tv_bloknot_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bloknot_name"
            app:layout_constraintTop_toTopOf="@+id/tv_bloknot_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>